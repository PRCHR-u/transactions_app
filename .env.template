# Путь к файлу с транзакциями
TRANSACTIONS_FILE=data/transactions.json

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Настройки API для получения курсов валют
CURRENCY_API_KEY=your_currency_api_key
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/RUB

# Настройки API для получения цен акций
STOCK_API_KEY=your_stock_api_key
STOCK_API_URL=https://api.alphavantage.co/query

# Настройки пользователя (можно также хранить в user_settings.json)
USER_CURRENCIES=["USD", "EUR"]
USER_STOCKS=["AAPL", "AMZN", "GOOGL", "MSFT", "TSLA"] 